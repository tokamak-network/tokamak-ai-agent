{
  "name": "tokamak-agent",
  "displayName": "Tokamak AI Agent",
  "description": "AI coding assistant powered by company's LiteLLM-based OpenAI-compatible API",
  "version": "0.1.2",
  "publisher": "tokamak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tokamak-network/tokamak-ai-agent"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onCommand:tokamak.openChat",
    "onCommand:tokamak.explainCode",
    "onCommand:tokamak.refactorCode",
    "onCommand:tokamak.clearChat",
    "onCommand:tokamak.sendToChat",
    "onCommand:tokamak.initSkills",
    "onCommand:tokamak.initKnowledge",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Tokamak AI Agent",
      "properties": {
        "tokamak.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for the AI service"
        },
        "tokamak.models": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "qwen3-235b",
            "qwen3-80b-next",
            "qwen3-coder-flash",
            "minimax-m2.5",
            "glm-4.7"
          ],
          "description": "List of available models"
        },
        "tokamak.selectedModel": {
          "type": "string",
          "default": "qwen3-235b",
          "description": "Currently selected model"
        },
        "tokamak.enableInlineCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline code completion (Ghost Text)"
        },
        "tokamak.completionDebounceMs": {
          "type": "number",
          "default": 300,
          "description": "Debounce delay in milliseconds for inline completions"
        },
        "tokamak.enableCheckpoints": {
          "type": "boolean",
          "default": false,
          "description": "Enable checkpoint feature. Checkpoints automatically save workspace state before each step in Agent mode, allowing you to restore to previous states."
        },
        "tokamak.enableMultiModelReview": {
          "type": "boolean",
          "default": false,
          "description": "Enable multi-model review. When enabled, a separate Reviewer model reviews code in Agent mode and a Critic model challenges plans in Plan mode."
        },
        "tokamak.reviewerModel": {
          "type": "string",
          "default": "",
          "description": "Model for code review in Agent mode (empty = same as main model)"
        },
        "tokamak.criticModel": {
          "type": "string",
          "default": "",
          "description": "Model for plan critique in Plan mode (empty = same as main model)"
        },
        "tokamak.maxReviewIterations": {
          "type": "number",
          "default": 3,
          "description": "Maximum review-fix cycles in Agent mode"
        },
        "tokamak.maxDebateIterations": {
          "type": "number",
          "default": 2,
          "description": "Maximum plan debate rounds in Plan mode"
        },
        "tokamak.agentStrategy": {
          "type": "string",
          "enum": [
            "review",
            "red-team"
          ],
          "default": "review",
          "description": "Strategy for multi-model code review in Agent mode. 'review' uses structured critique/rebuttal, 'red-team' uses adversarial security analysis."
        },
        "tokamak.planStrategy": {
          "type": "string",
          "enum": [
            "debate",
            "perspectives"
          ],
          "default": "debate",
          "description": "Strategy for multi-model plan debate. 'debate' uses structured challenge/defense, 'perspectives' uses risk/innovation lens analysis."
        },
        "tokamak.autoApproval.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable auto-approval for agent operations. When enabled, certain operations are executed without manual confirmation."
        },
        "tokamak.autoApproval.tools.read_file": {
          "type": "string",
          "enum": [
            "always_allow",
            "ask",
            "deny"
          ],
          "default": "always_allow",
          "description": "Approval level for file read operations"
        },
        "tokamak.autoApproval.tools.write_file": {
          "type": "string",
          "enum": [
            "always_allow",
            "ask",
            "deny"
          ],
          "default": "ask",
          "description": "Approval level for file write operations"
        },
        "tokamak.autoApproval.tools.create_file": {
          "type": "string",
          "enum": [
            "always_allow",
            "ask",
            "deny"
          ],
          "default": "ask",
          "description": "Approval level for file creation operations"
        },
        "tokamak.autoApproval.tools.delete_file": {
          "type": "string",
          "enum": [
            "always_allow",
            "ask",
            "deny"
          ],
          "default": "ask",
          "description": "Approval level for file deletion operations"
        },
        "tokamak.autoApproval.tools.terminal_command": {
          "type": "string",
          "enum": [
            "always_allow",
            "ask",
            "deny"
          ],
          "default": "ask",
          "description": "Approval level for terminal command execution"
        },
        "tokamak.autoApproval.tools.search": {
          "type": "string",
          "enum": [
            "always_allow",
            "ask",
            "deny"
          ],
          "default": "always_allow",
          "description": "Approval level for search operations"
        },
        "tokamak.autoApproval.allowedPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Glob patterns for paths that are always auto-approved (e.g., 'src/**/*.ts')"
        },
        "tokamak.autoApproval.protectedPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Glob patterns for paths that always require manual confirmation (e.g., '.env', '*.key')"
        },
        "tokamak.autoApproval.maxAutoApproveFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size (bytes) for auto-approval. Files larger than this always require confirmation."
        },
        "tokamak.autoApproval.allowedCommands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Command patterns that may be auto-approved (supports * wildcard, e.g., 'npm test', 'npm run *')"
        },
        "tokamak.enableBrowser": {
          "type": "boolean",
          "default": false,
          "description": "Enable browser automation actions (requires puppeteer-core)"
        }
      }
    },
    "commands": [
      {
        "command": "tokamak.openChat",
        "title": "Tokamak: Open Chat"
      },
      {
        "command": "tokamak.explainCode",
        "title": "Tokamak: Explain Code"
      },
      {
        "command": "tokamak.refactorCode",
        "title": "Tokamak: Refactor Code"
      },
      {
        "command": "tokamak.clearChat",
        "title": "Tokamak: Clear Chat History"
      },
      {
        "command": "tokamak.sendToChat",
        "title": "Tokamak: Send to Chat"
      },
      {
        "command": "tokamak.initSkills",
        "title": "Tokamak: Initialize Skills Folder"
      },
      {
        "command": "tokamak.initKnowledge",
        "title": "Tokamak: Initialize Project Knowledge Folder"
      },
      {
        "command": "tokamak.configureMcp",
        "title": "Tokamak: Configure MCP Servers"
      },
      {
        "command": "tokamak.initRules",
        "title": "Tokamak: Initialize Rules Folder"
      }
    ],
    "keybindings": [
      {
        "command": "tokamak.openChat",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "tokamak.sendToChat",
          "when": "editorHasSelection",
          "group": "tokamak@0"
        },
        {
          "command": "tokamak.explainCode",
          "when": "editorHasSelection",
          "group": "tokamak@1"
        },
        {
          "command": "tokamak.refactorCode",
          "when": "editorHasSelection",
          "group": "tokamak@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "bundle": "rm -rf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "bundle-watch": "npm run bundle -- --watch",
    "package": "npm run bundle && vsce package",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.3",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "openai": "^4.24.0",
    "web-tree-sitter": "^0.26.6",
    "yaml": "^2.8.2"
  }
}
