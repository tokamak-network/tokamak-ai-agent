{
  "name": "tokamak-agent",
  "displayName": "Tokamak AI Agent",
  "description": "AI coding assistant powered by company's LiteLLM-based OpenAI-compatible API",
  "version": "0.1.1",
  "publisher": "tokamak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tokamak-network/tokamak-ai-agent"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onCommand:tokamak.openChat",
    "onCommand:tokamak.explainCode",
    "onCommand:tokamak.refactorCode",
    "onCommand:tokamak.clearChat",
    "onCommand:tokamak.sendToChat",
    "onCommand:tokamak.initSkills",
    "onCommand:tokamak.initKnowledge",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Tokamak AI Agent",
      "properties": {
        "tokamak.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for the AI service"
        },
        "tokamak.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Base URL for the AI API endpoint"
        },
        "tokamak.models": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "qwen3-235b"
          ],
          "description": "List of available models"
        },
        "tokamak.selectedModel": {
          "type": "string",
          "default": "qwen3-235b",
          "description": "Currently selected model"
        },
        "tokamak.enableInlineCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline code completion (Ghost Text)"
        },
        "tokamak.completionDebounceMs": {
          "type": "number",
          "default": 300,
          "description": "Debounce delay in milliseconds for inline completions"
        },
        "tokamak.enableCheckpoints": {
          "type": "boolean",
          "default": false,
          "description": "Enable checkpoint feature. Checkpoints automatically save workspace state before each step in Agent mode, allowing you to restore to previous states."
        }
      }
    },
    "commands": [
      {
        "command": "tokamak.openChat",
        "title": "Tokamak: Open Chat"
      },
      {
        "command": "tokamak.explainCode",
        "title": "Tokamak: Explain Code"
      },
      {
        "command": "tokamak.refactorCode",
        "title": "Tokamak: Refactor Code"
      },
      {
        "command": "tokamak.clearChat",
        "title": "Tokamak: Clear Chat History"
      },
      {
        "command": "tokamak.sendToChat",
        "title": "Tokamak: Send to Chat"
      },
      {
        "command": "tokamak.initSkills",
        "title": "Tokamak: Initialize Skills Folder"
      },
      {
        "command": "tokamak.initKnowledge",
        "title": "Tokamak: Initialize Project Knowledge Folder"
      }
    ],
    "keybindings": [
      {
        "command": "tokamak.openChat",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "tokamak.sendToChat",
          "when": "editorHasSelection",
          "group": "tokamak@0"
        },
        {
          "command": "tokamak.explainCode",
          "when": "editorHasSelection",
          "group": "tokamak@1"
        },
        {
          "command": "tokamak.refactorCode",
          "when": "editorHasSelection",
          "group": "tokamak@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "bundle": "rm -rf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "bundle-watch": "npm run bundle -- --watch",
    "package": "npm run bundle && vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.3",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "openai": "^4.24.0"
  }
}